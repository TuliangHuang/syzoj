<% include util %>
<%
if (typeof contest === 'undefined') contest = null;
if (contest) {
  this.title = this.alpha(pid) + '. ' + syzoj.utils.removeTitleTag(problem.title) + ' - ' + contest.title + ' - 比赛';
} else {
  this.title = problem.title + ' - 题目';
}
const isVJudge = problem.type.startsWith("vjudge:");
if (isVJudge) testcases = [];
%>
<% include header %>
<style>
#languages-menu::-webkit-scrollbar, #testcase-menu::-webkit-scrollbar {
    width: 0px;
    background: transparent;
}

#languages-menu .item::after, #testcase-menu .item::after {
    display: none;
}
</style>

<% include monaco-editor %>

<div class="ui center aligned grid">
    <div class="row">
      <h1 class="ui header">
        <% if (contest) { %>
          <%= this.alpha(pid) %>. <%= syzoj.utils.removeTitleTag(problem.title) %>
        <% } else { %>
          #<%= problem.id %>. <%= problem.title %><% if (problem.allowedEdit && !problem.is_public) { %><span class="ui tiny red label">未公开</span><% } %>
        <% } %>
      </h1>
    </div>
    <%
      const isSubmitAnswer = problem.type === 'submit-answer';
      const isInteraction = problem.type === 'interaction';
      const rowOffset = -23;
      const firstRowOffset = -15;
      const typeDisplayMap = { 'submit-answer': '答案提交', 'interaction': '交互', 'traditional': '传统', 'vjudge:luogu': 'VJudge（洛谷）' };
      const typeDisplay = typeDisplayMap[problem.type];
      const judgeMethod = isVJudge ? 'VJudge' : ((testcases && !testcases.error) ? (testcases.spj ? 'Special Judge' : '文本比较') : '无测试数据');
      const canShowUploader = problem.allowedManage || !problem.is_anonymous;
    %>
    <% if (isSubmitAnswer) { %>
      <div class="row" style="margin-top: <%= firstRowOffset %>px">
        <div class="ui label">
          题目类型
          <div class="detail">
            <%= typeDisplay %>
          </div>
        </div>
        <div class="ui label">
          评测方式
          <div class="detail">
            <%= judgeMethod %>
          </div>
        </div>
      </div>
    <% } else if (isInteraction) { %>
      <div class="row" style="margin-top: <%= firstRowOffset %>px">
        <div class="ui label">内存限制<div class="detail"><%= problem.memory_limit %> MiB</div></div>
        <div class="ui label">时间限制<div class="detail"><%= problem.time_limit %> ms</div></div>
        <div class="ui label">题目类型<div class="detail">交互</div></div>
      </div>
    <% } else { %>
      <div class="row" style="margin-top: <%= firstRowOffset %>px">
        <div class="ui label">内存限制<div class="detail"><%= problem.memory_limit %> MiB</div></div>
        <div class="ui label">时间限制<div class="detail"><%= problem.time_limit %> ms</div></div>
        <% if (problem.file_io) { %>
          <div class="ui label">文件输入输出<div class="detail"><%= problem.file_io_input_name %> ≫ <%= problem.file_io_output_name %></div></div>
        <% } else { %>
          <div class="ui label">标准输入输出</div>
        <% } %>
      </div>
      <div class="row" style="margin-top: <%= rowOffset %>px">
        <div class="ui label">
          题目类型
          <div class="detail">
            <%= typeDisplay %>
          </div>
        </div>
        <div class="ui label">
          评测方式
          <div class="detail">
            <%= judgeMethod %>
          </div>
        </div>
      </div>
    <% } %>
    <% if (!contest || contest.ended) { %>
      <div class="row" style="margin-top: <%= rowOffset %>px">
        <% if (canShowUploader) { %>
          <div class="ui label">
            上传者
            <a class="detail" href="<%= syzoj.utils.makeUrl(['user', problem.user_id]) %>"><%= problem.user.username %></a>
          </div>
        <% } %>
        <% if (problem.allowedManage) { %>
          <div class="ui label">
            公开者
            <% if (problem.publicizer) { %>
              <a class="detail" href="<%= syzoj.utils.makeUrl(['user', problem.publicizer_id]) %>"><%= problem.publicizer.username %></a>
            <% } else { %>
              <div class="detail">未知</div>
            <% } %>
          </div>
        <% } %>
        <% if (problem.source) { %>
          <div class="ui label">
            原题
            <a class="detail" href="<%= problem.source %>"><%= syzoj.utils.parseUrl(problem.source) %></a>
          </div>
        <% } %>
        <% if (problem.luogu_url) { %>
          <div class="ui label">
            洛谷
            <a class="detail" href="<%= problem.luogu_url %>"><%= syzoj.utils.parseLuoguUrl(problem.luogu_url) %></a>
          </div>
        <% } %>
        <% if (problem.bzoj_id) { %>
          <div class="ui label">
            BZOJ
            <a class="detail">#<%= problem.bzoj_id %></a>
          </div>
        <% } %>
     </div>
    <% } %>
    <% if (problem.tags && problem.tags.length) { %>
      <div class="row show_tag_controled" id="problem_tag_row" style="margin-top: -23px; white-space: normal;">
        <% for (let tag of problem.tags) { %>
          <a href="<%= syzoj.utils.makeUrl(['problems', 'tag', tag.id]) %>" class="ui <%= tag.color %> label">
            <%= tag.name %>
          </a>
        <% } %>
        <% if (problem.difficulty != null) { %>
          <span class="ui black basic label difficulty_tag_inline"><%= problem.difficulty %></span>
        <% } %>
      </div>
    <% } %>
    <script data-cfasync="false">
    (function () {
      if (typeof window === 'undefined' || typeof document === 'undefined') return;
      if (typeof window.renderShowTagStyle !== 'function') {
        window.renderShowTagStyle = function (visible) {
          return visible
            ? '.show_tag_controled { white-space: nowrap; overflow: hidden; }\n.difficulty_tag_column { display: table-cell; }\n.difficulty_tag_inline { display: inline-block; }'
            : '.show_tag_controled { width: 0; white-space: nowrap; overflow: hidden; }\n.difficulty_tag_column, .difficulty_tag_inline { display: none; }';
        };
      }

      function ensureShowTagStyle() {
        var styleEl = document.getElementById('show_tag_style');
        if (!styleEl) {
          styleEl = document.createElement('style');
          styleEl.id = 'show_tag_style';
          document.head.appendChild(styleEl);
        }
        return styleEl;
      }

      function applyShowTagPreference() {
        var show = true;
        try {
          show = localStorage.getItem('show_tag') !== '0';
        } catch (e) {
          show = true;
        }

        var styleEl = ensureShowTagStyle();
        if (styleEl) {
          styleEl.innerHTML = window.renderShowTagStyle(show);
        }

        var tagRow = document.getElementById('problem_tag_row');
        if (tagRow) {
          tagRow.style.display = show ? '' : 'none';
        }
      }

      applyShowTagPreference();
      window.addEventListener('storage', function (event) {
        if (event && event.key === 'show_tag') {
          applyShowTagPreference();
        }
      });
    })();
    </script>
